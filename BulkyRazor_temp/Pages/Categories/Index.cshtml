@page
@model BulkyRazor_temp.Pages.Categories.IndexModel

@* we will loop through category list and display on the Web page *@

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-page ="/categories/create"  class="btn btn-success rounded">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>

        <th>
            Display Order
        </th>

        <th></th>
    </tr>
    </thead>

    <tbody>
        @* use for loop to get corresponding name and display order *@
        @foreach(var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>

                <td>
                    @obj.DisplayOrder
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-info mx-2 rounded">
                                <i class="bi bi-pencil-square"></i>
                                Edit

                        </a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded ">
                                <i class="bi bi-trash"></i>


                                Delete

                            </a>

                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
</div>
